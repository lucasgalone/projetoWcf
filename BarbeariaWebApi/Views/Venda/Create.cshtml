@model Entity.VendaDto

@{
    ViewBag.Title = "Inclusão";
}

    <h2>Inclusão</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">CLIENTE</label>
        <div class="col-md-10">
            @Html.DropDownList("idcliente", (IEnumerable<SelectListItem>)ViewBag.ComboboxClientes, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdCliente, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">PRESTADOR</label>
        <div class="col-md-10">
            @Html.DropDownList("idprestador", (IEnumerable<SelectListItem>)ViewBag.ComboboxPrestadores, null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.IdPrestador, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">PRODUTOS</label>
        @foreach (var aux in ViewBag.Produtos)
        {
            <div class="col-md-10">
                <table class="table">
                    <tr>
                        <th>
                            @aux.nome
                        </th>
                        <th>
                            @aux.preco
                        </th>
                        <th>
                            <select name="@aux.nome" class="control-label">
                                <option value=0>0</option>
                                <option value=1>1</option>
                                <option value=2>2</option>
                                <option value=3>3</option>
                                <option value=4>4</option>
                            </select>
                        </th>
                    </tr>
                </table>
            </div>
        }
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">SERVIÇOS</label>
        @foreach (var aux in ViewBag.Servicos)
        {
            <div class="col-md-10">
                <table class="table">
                    <tr>
                        <th>
                            @aux.nome
                        </th>
                        <th>
                            R$ @aux.preco
                        </th>
                        <th>
                            <select name="@aux.nome" class="control-label">
                                <option value=0>0</option>
                                <option value=1>1</option>
                                <option value=2>2</option>
                                <option value=3>3</option>
                                <option value=4>4</option>
                            </select>
                        </th>
                    </tr>
                </table>
            </div>
        }
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Salvar</button>
            <button type="button" class="btn btn-default">@Html.ActionLink("Voltar", "Index")</button>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
