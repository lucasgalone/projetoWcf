@model Entity.VendaDto

@{
    ViewBag.Title = "Visualização";
}

    <h2>Visualização</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                CLIENTE
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NomeCliente)
            </dd>
            <dt>
                PRESTADOR
            </dt>

            <dd>
                @Html.DisplayFor(model => model.NomePrestador)
            </dd>

        </dl>
        @if (Model.ListaProduto.Count > 0)
        {
            <h2>Lista de Produto</h2>
            <table class="table">
                <tr>
                    <th>
                        NOME
                    </th>
                    <th>
                        PREÇO
                    </th>
                </tr>

                @foreach (var item in Model.ListaProduto)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                    </tr>
                }
            </table>
        }
        @if (Model.ListaServico.Count > 0)
        {
            <h2>Lista de Serviço</h2>
            <table class="table">
                <tr>
                    <th>
                        NOME
                    </th>
                    <th>
                        PREÇO
                    </th>
                </tr>

                @foreach (var item in Model.ListaServico)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                    </tr>
                }
            </table>
        }

        <dl class="dl-horizontal">
            <dt>
                TOTAL
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Total)
            </dd>
        </dl>

    </div>
<p>
    <button type="button" class="btn btn-default">@Html.ActionLink("Voltar", "Index")</button>
</p>
