@model IEnumerable<BarbeariaWebApi.ServicoServiceReference.Servico>

@{
    ViewBag.Title = "Lista ";
}

    <h2>Lista de Serviço</h2>

<p>
    @Html.ActionLink("Adicionar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            NOME
        </th>
        <th>
            PREÇO
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.preco)
        </td>
        <td>
            @Html.ActionLink("Visualização", "Details", new { id=item.id })
        </td>
    </tr>
}

</table>
